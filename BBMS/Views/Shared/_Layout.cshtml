<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BBMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Blood Bank", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1 justify-content-end ">
                    @* <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>*@

                    @if (User.Identity.IsAuthenticated)
                    {
                       
                        <li style="margin-right: 20px;">
                            @Html.ActionLink("Get List", "Index", "BDonors", null, new
                          {
                           style = "color:white; text-decoration:none; "
                                               ,
                           onmouseover = "this.style.color='blue';",
                           onmouseout = "this.style.color='white';"
                          })
                        </li>
                        
                        <li style="margin-right: 20px;">
                        @Html.ActionLink("Create", "Create", "BDonors", null, new
                        {
                            style = "color:white; text-decoration:none;",
                            onmouseover = "this.style.color='blue';",
                            onmouseout = "this.style.color='white';"
                        })
                        </li>
                        <li  style="margin-right: 20px; color:white;" >Dear-@User.Identity.Name</li>
                        <li style="margin-right: 20px; color :white;">@Html.ActionLink("Logout", "Logout", "Account", null, new
                                                                 {
                                                                     style = "color:red; text-decoration:none;",
                                                                     onmouseover = "this.style.color='blue';",
                                                                     onmouseout = "this.style.color='white';"
                                                                 })</li>
                 }
            else
            {
                <li  style="margin-right: 20px; color:white;">@Html.ActionLink("Login", "Login", "Account", null, new
                                                         {
                                                             style = "color:white; text-decoration:none; padding:10px 20px; background-color:lightblue; border-radius:5px;",
                                                             onmouseover = "this.style.color='';",
                                                             onmouseout = "this.style.color='white';"
                                                         })</li>
            }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
